{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Запустить файл (Ruby)",
            "type": "shell",
            "command": "ruby ${relativeFile}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Запустить Ruby REPL",
            "type": "shell",
            "command": "irb",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Проверить код (Ruby)",
            "type": "shell",
            "command": "bundle exec rubocop",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Исправить код (Ruby)",
            "type": "shell",
            "command": "bundle exec rubocop -a",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Запустить проект",
            "type": "shell",
            "command": "ruby app.rb",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Запустить тесты",
            "type": "shell",
            "command": "bundle exec rspec",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Посмотреть покрытие тестами",
            "type": "shell",
            "command": "start coverage/index.html",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Запустить юнит-тесты",
            "type": "shell",
            "command": "rake unit",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Запустить системные тесты",
            "type": "shell",
            "command": "rake system",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}